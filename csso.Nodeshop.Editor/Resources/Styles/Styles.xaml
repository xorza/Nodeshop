<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Button">
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="13,8"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ActiveElementBackground}" />
        <Setter Property="MinimumHeightRequest" Value="30" />
        <Setter Property="MinimumWidthRequest" Value="80" />
    </Style>

    <Style TargetType="ContentPage" x:Key="ContentPageDefaultStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ContentBackground}" />
    </Style>

</ResourceDictionary>